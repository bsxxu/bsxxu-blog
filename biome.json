{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "organizeImports": { "enabled": true },
  "files": {
    "ignore": [
      ".next/**",
      "dist/**",
      ".turbo/**",
      "node_modules/**",
      "drizzle/**",
      ".vscode/**"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": { "noExplicitAny": "off" },
      "complexity": { "useLiteralKeys": "off" },
      "a11y": {
        "useButtonType": "off",
        "useKeyWithClickEvents": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "css": {
    "formatter": {
      "enabled": true
    }
  }
}
